.login-wrapper
  =render "items/sell-header"
  .login-content
    .login-content__signup
      .login-content__signup__title
        アカウントをお持ちでない方はこちら
      =link_to registrations_path do
        .login-signup-btn
          新規会員登録
    .login-content__sns
      =link_to 'https://ja-jp.facebook.com/' do
        .facebook-btn
          Facebookでログイン　　　
          = image_tag 'facebook_logo.png', alt: 'Image from Gyazo', width: '27px', class: 'facebook-logo'
      =link_to 'https://accounts.google.com/' do
        .google-btn
          Googleでログイン　　　
          = image_tag 'google_logo.png', alt: 'Image from Gyazo', width: '25px', class: 'google-logo'
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .login-content__form
        .login-form-top
          = f.email_field :email, class: 'login-email',autofocus: true, placeholder: "メールアドレス"
        .form-group
          = f.password_field :password, class: 'login-password', placeholder: "パスワード"
          = recaptcha_tags
        .form-group
          = f.submit "Log in", class: 'login-btn', value: "ログイン"
  =render "items/sell-footer"