.login-wrapper
  %header.login-header
  .login-content
    .login-content__signup
      .login-content__signup__title
        アカウントをお持ちでない方はこちら
      =link_to registrations_path do
        .login-signup-btn
          新規会員登録
    .login-content__sns
      =link_to 'https://ja-jp.facebook.com/' do
        .facebook-btn
          Facebookでログイン
      =link_to 'https://accounts.google.com/' do
        .google-btn
          Googleでログイン
    .login-content__form
      .login-form-top
        %input.login-email{placeholder: "メールアドレス"}
      .form-group
        %input.login-password{placeholder: "パスワード"}
        -#reCAPTYA実装
      .form-group
        =link_to users_path do
          .login-btn
            ログイン

  %footer.login-footer