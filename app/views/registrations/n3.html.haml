.registration-wrapper
  .n3
    = render "/shared/SignUp-header"
  .registration-content
    .profile-head
      発送元、お届け先住所入力
    .addless-content.signup-height
      .addless-form.signup-margin
        = form_for @user, url: n4_registrations_path, method: :get do |f|
          .form-group
            .profile-form-title
              お名前
              %span#must__red.must__tag 必須
            %input{placeholder: "例）山田", value: session[:family_name_zen]}
            %input.last-name-form{placeholder: "例）彩",value: session[:first_name_zen]}
          .form-group
            .profile-form-title
              お名前カナ
              %span#must__red.must__tag 必須
            %input{placeholder: "例）ヤマダ",value: session[:family_name_kana]}
            %input.last-name-form{placeholder: "例）アヤ",value: session[:first_name_kana]}
          = f.fields_for :addresses, @user.addresses.build do |a|
            .form-group
              .profile-form-title
                郵便番号
                %span#must__red.must__tag 必須
              = a.text_field :postal_code, placeholder: "例）123-4567"
            .form-group
              .profile-form-title
                都道府県
                %span#must__red.must__tag 必須
              %select
                =render "/shared/prefectures"
            .form-group
              .profile-form-title
                市区町村
                %span#must__red.must__tag 必須
              = a.text_field :city, placeholder: "例）横浜市緑区"
            .form-group
              .profile-form-title
                番地
                %span#must__red.must__tag 必須
              = a.text_field :house, placeholder: "例）青山1-1-1"
            .form-group
              .profile-form-title
                建物名
                %span#must__red.must__tag 必須
              = a.text_field :building, placeholder: "例）柳ビル103"
            .form-group
              .profile-form-title
                電話
                %span#must__red.must__tag 必須
              = a.text_field :telephone, placeholder: "例）09012345678"
            = f.submit value: '次へ進む', class: 'next-btn', id: '#n3-next'
  =render "items/sell-footer"