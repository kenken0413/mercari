.wrapper
  .n3
    = render "/shared/SignUp-header"
  .registration-content
    .profile-head
      発送元、お届け先住所入力
    .addless-content.signup-header
      .addless-form.signup-margin
        .form-group
          .profile-form-title
            お名前
            %span#must__red.must__tag 必須
          %input{placeholder: "例）山田"}
          %input.last-name-form{placeholder: "例）彩"}
        .form-group
          .profile-form-title
            お名前カナ
            %span#must__red.must__tag 必須
          %input{placeholder: "例）ヤマダ"}
          %input.last-name-form{placeholder: "例）アヤ"}
        .form-group
          .profile-form-title
            郵便番号
            %span#must__red.must__tag 必須
          %input{placeholder: "例）123-4567"}
        .form-group
          .profile-form-title
            都道府県
            %span#must__red.must__tag 必須
          %select
            =render "/shared/prefectures"
        .form-group
          .profile-form-title
            市区町村
            %span#must__red.must__tag 必須
          %input{placeholder: "例）横浜市緑区"}
        .form-group
          .profile-form-title
            番地
            %span#must__red.must__tag 必須
          %input{placeholder: "例）青山1-1-1"}
        .form-group
          .profile-form-title
            建物名
            %span#must__red.must__tag 必須
          %input{placeholder: "例）柳ビル103"}
        .form-group
          .profile-form-title
            電話
            %span#must__red.must__tag 必須
          %input{placeholder: "例）09012345678"}
        %input.next-btn#n3-next{type:"button",value:"次へ進む"}
  =render "items/sell-footer"