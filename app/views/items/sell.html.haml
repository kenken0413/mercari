.sell-wrapper
  =render partial: "sell-header"
  .sell-main
    %h2
      商品の情報を入力
    = form_for(@item, html: {multipart: true}) do |f|
      .sell-main-form
        .sell-main-form__images
          %h3
            %span 出品画像
            %span.must__tag.bold 必須
          %p 最大10枚までアップロードできます
          = fields_for Image do |i|
            .sell-main-form__images__photos
              .sell-main-form__images__photos__update
                = i.file_field :image
                -# %input.sell-upload-drop-file{multiple: "multiple", name: "image1", style: "display: none;", type: "file"}/
                %ul
                  %li ドラッグアンドドロップ
                  %li またはクリックしてファイルをアップロード

        .sell-main-form__descriptions
          .sell-main-form__descriptions__name
            %h4
              %span 商品名
              %span.must__tag 必須
            = f.text_field:name,{placeholder: "商品名（必須 40文字まで)", value: ""}
            
          .sell-main-form__descriptions__comment
            %h4 
              %span 商品の説明
              %span.must__tag 必須
            -# %textarea.textarea-comment{placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: " "}
            = f.text_field:description,{class: 'textarea-comment', placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: " "}

        .sell-main-form__content.clearfix
          %p 商品の詳細
          .sell-main-form__content__detail
            .sell-main-form__content__detail__category
              %h4
                %span カテゴリー 
                %span.must__tag 必須
              .sell-main-form__content__detail__category__box
                = f.select:category_id,options_from_collection_for_select(@parents.all,:id,:category),prompt: "---"

              -# 　セレクトの中にーーー　NULLを追加する
              .sell-main-form__content__detail__category__box
                = f.select:category,['category1','category2','category3'],{class: 'select-box',prompt: '---'}
              .sell-main-form__content__detail__category__box
                = f.select:category,['category1','category2','category3'],{class: 'select-box',prompt: '---'}
            .sell-main-form__content__detail__brand
              %h4
                %span ブランド 
                %span.brand__tag 任意

              .sell-main-form__content__detail__brand__box
                = f.text_field:brand,{class: 'select-box',prompt: '---' }          
            .sell-main-form__content__detail__status
              %h4
                %span 商品の状態 
                %span.must__tag 必須
              .sell-main-form__content__detail__status__box
                = f.select:state,['state1','state2','state3'],{class: 'select-box',prompt: '---'}

        .sell-main-form__content.clearfix
          %p 配送について
          %a#question{href: ''} ?
          = fields_for @delivery do |d|
            .sell-main-form__content__delivery
              .sell-main-form__content__delivery__fee
                %h4
                  %span 配送料の負担 
                  %span.must__tag 必須
                .sell-main-form__content__delivery__fee__box
                  = d.select:postage_method,['送料込み(出品者負担)','着払い(購入者負担)'],{class: "select-box",prompt: "---"}
                  -# データ挿入必要
              .sell-main-form__content__delivery__detail
                %h4
                  %span 配送の方法 
                  %span.must__tag 必須
                .sell-main-form__content__delivery__detail__box
                  = d.select:postage_detail,['送料込み(出品者負担)','着払い(購入者負担)'],{class: "select-box",prompt: "---"}
                  -# データ挿入必要
              .sell-main-form__content__delivery__region
                %h4
                  %span 配送元の地域
                  %span.must__tag 必須
                .sell-main-form__content__delivery__region__box
                  = d.select:region,['1','2','3'],{class: "select-box",prompt: "---"}
                  -# データ挿入必要

              .sell-main-form__content__delivery__delay
                %h4
                  %span 発送までの日数
                  %span.must__tag 必須
                .sell-main-form__content__delivery__delay__box
                  = d.select:shipping_date,['1~2日で発送','2~3日で発送','4~7日で発送'],{class: "select-box",prompt: "---"}

        .sell-main-form__content.clearfix
          %p 販売価格（300~9,999,999)
          %a#question{href: ''} ?
          .sell-main-form__content__price
            %ul
              %li.sell-main-form__content__price__total.clearfix
                %h4
                  %span 価格 
                  %span.must__tag 必須
                .sell-main-form__content__price__total__input
                  %p ¥
                  = f.text_field:price,{placeholder: "商品名（必須 40文字まで)", value: ""}


                  -# %input.input-price{placeholder: "例）300", value: ""}
              %li.sell-main-form__content__price__charge.clearfix
                .sell-main-form__content__price__charge__title 販売手数料(10%)
                .sell-main-form__content__price__charge__auto -
              %li.sell-main-form__content__price__profit.clearfix
                .sell-main-form__content__price__profit__title 販売利益
                .sell-main-form__content__price__profit__auto -

        .sell-main-form__btn-box
          .sell-main-form__btn-box__caution
            %p
              = link_to "禁止されている出品"
              、
              = link_to "行為"
              を必ず確認ください。
            %p
              またブランド品でシリアルナンバー等がある場合はご記載ください。
              = link_to"偽ブランドの販売"
              は犯罪であり処罰される可能性があります。
            %p
              また、出品をもちまして
              = link_to"加盟店規約"
              に同意したことになります。
          = f.submit'出品する', class:'sell-main-form__btn-box__submit-btn button', text: "出品する"
          .sell-main-form__btn-box__back-btn
            =link_to "もどる"

    -# Jクエリ動作実験用
    .form-group
      %textarea{id:"keyword" ,placeholder:"入力"}
      %button{id:"submit"}送信する
      %p#result

    = render partial:"sell-footer"