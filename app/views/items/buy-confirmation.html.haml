.buy-wrapper
  = render partial: "sell-header"

  .buy-main
    %h1 購入内容の確認
    %section
      .buy-main__content
        %h2
          = image_tag 'bag-photo', alt: 'photo', height: '64px', width: '64px', class: 'buy-item-photo'
          %p フルラ 美品 チェーンバッグ ミニバック ミニショルダー ピンク レザー
        = form_tag do
          .buy-main__content__price
            %p1 ¥16,000
            %p2 送料込み
          .buy-main__content__point
            ポイントはありません
          .buy-main__content__final-price
            .buy-main__content__final-price--left
              支払金額
            .buy-main__content__final-price--right
              ¥16,000
          = submit_tag '購入する'
    %section.with_margin_top  
      .buy-main__content
        %h3 配送先
        %p 〒497-0000
        %p 愛知県海部郡蟹江町
        %p 昭和太郎
        =link_to "変更する　＞"
    %section.with_margin_top.and-bottom
      .buy-main__content
        %h3 支払方法
        %p *******2222
        %p 09/24
        %i.fab.fa-cc-visa.blue
        =link_to "変更する　＞"
  = render partial: "sell-footer"